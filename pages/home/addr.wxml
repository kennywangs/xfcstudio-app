<view class="page">
  <view class="container" style="border-bottom: 2px solid #fff;">
    <text>工作室地址</text>
  </view>
  <view>
    <map
        id="myMap"
        style="width: 100%; height: 300px;"
        latitude="{{latitude}}"
        longitude="{{longitude}}"
        markers="{{markers}}"
        show-location
        show-compass="true"
      ></map>
  </view>
  <view class="btn-area" style="margin-top: 15px;">
    <button bindtap="moveToLocation" type="primary">我的位置</button>
  </view>
</view>