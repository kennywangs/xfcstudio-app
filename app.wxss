/**app.wxss**/
@import 'style/weui.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 5rpx;
  box-sizing: border-box;
}

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.row-gap {
  padding-top: 5px;
  text-align: center;
}

.row-margin-gap {
  margin-bottom: 10px;
}

.form {
  font-size: 14px;
  color: #78a5f1;
}
.form .cell{
  padding:4px 0;
}

.card-list{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.card-list .card{
  background-color: #fff;
  box-shadow: 0 1px 2px rgba(0,0,0,.3);
  padding: 10px 5px;
  border-radius: 2px 2px 0 0;
}
.card-list .card .card-header{
  padding: 10px 15px;
  font-size: 16px;
  color: #000;
  border-bottom: 1px solid #8f8f94;
}
.card-list .card .card-content{
  padding: 15px;
  font-size: 14px;
  color: #8f8f94;
}
.card-list .card .card-footer{
  padding: 10px 15px;
  font-size: 14px;
  color: #8f8f94;
  border-top: 1px solid #8f8f94;
}
